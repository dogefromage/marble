{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "anyOf": [
        {
            "$ref": "#/definitions/VerticalMenuShape"
        },
        {
            "$ref": "#/definitions/HorizontalMenuShape"
        }
    ],
    "definitions": {
        "CommandMenuElement": {
            "properties": {
                "command": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "onClick": {
                    "type": "object"
                },
                "type": {
                    "enum": [
                        "command"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "command",
                "name",
                "type"
            ],
            "type": "object"
        },
        "ExpandMenuElement": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "sublist": {
                    "$ref": "#/definitions/VerticalMenuShape"
                },
                "type": {
                    "enum": [
                        "expand"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "name",
                "sublist",
                "type"
            ],
            "type": "object"
        },
        "HorizontalMenuShape": {
            "properties": {
                "list": {
                    "items": {
                        "$ref": "#/definitions/ExpandMenuElement"
                    },
                    "type": "array"
                },
                "type": {
                    "enum": [
                        "horizontal"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "list",
                "type"
            ],
            "type": "object"
        },
        "MenuElement": {
            "anyOf": [
                {
                    "$ref": "#/definitions/ExpandMenuElement"
                },
                {
                    "$ref": "#/definitions/CommandMenuElement"
                }
            ]
        },
        "VerticalMenuShape": {
            "properties": {
                "list": {
                    "items": {
                        "$ref": "#/definitions/MenuElement"
                    },
                    "type": "array"
                },
                "type": {
                    "enum": [
                        "vertical"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "list",
                "type"
            ],
            "type": "object"
        }
    }
}

